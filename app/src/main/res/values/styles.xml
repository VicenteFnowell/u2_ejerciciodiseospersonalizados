<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilo personalizado boton -->

    <style name="EstiloBoton">
        <item name="android:textColor">@color/colortextoboton</item>
        <item name="android:textSize">@dimen/tamtexto</item>
        <item name="android:shadowColor">@color/colorsombra</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>

    </style>

</resources>
